@model WhatsLuzMVCAPI.Models.SportEvent

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<title>@ViewBag.Title</title>

<style>
    h1.page-header {
        margin-top: -5px;
    }

    .sidebar {
        padding-left: 0;
    }

    .main-container {
        background: #FFF;
        padding-top: 15px;
        margin-top: -20px;
    }

    .footer {
        width: 100%;
    }

    .label, .glyphicon {
        margin-right: 5px;
    }
</style>
<link href="~/Content/SearchMenu.css" rel="stylesheet">
<script src="~/Scripts/Admin/Users.js"></script>

<div class="col-md-10 content">
    <div class="container pull-left">
        <!-- Filter Events -->
     

        <!-- contacts card -->
        <div class="card card-default" id="card_contacts">
            <div id="contacts" class="panel-collapse collapse show" aria-expanded="true" style="">
                <ul class="list-group pull-down" id="contact-list">
                    @{
                        List<WhatsLuzMVCAPI.Models.SportEvent> eventsList = ViewBag.EventsList;

                        for (int i = 0; i < eventsList.Count; i++)
                        {
                            <li class="list-group-item">
                                <div class="row w-100">
                                    <div class="col-12 col-sm-6 col-md-3 px-0">
                                        @eventsList[i].title
                                    </div>
                                    <div>
                                        <div class="" style="float:left;">
                                            
                                            <label class="name lead">Event ID: @eventsList[i].EventID</label>
                                            <br>
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                            <span class="text-muted">Date: @eventsList[i].Date</span>
                                            <br>
                                            <i class="fa fa-clock-o" aria-hidden="true"></i>
                                            <span class="text-muted small text-truncate">Duration: @eventsList[i].Duration</span>
                                            <br />
                                            <i class="fa fa-users" aria-hidden="true"></i>
                                            <span class="text-muted small text-truncate">Max Attendies: @eventsList[i].MaxAttendies</span>
                                        </div>
                                        <div style="float:right;padding:10px;">
                                            <a href="/Admin/EditEvent?eventID=@eventsList[i].EventID" class="btn btn-primary">Edit Event</a>
                                            <br />
                                            <a href="/Admin/DeleteEvent?eventID=@eventsList[i].EventID" style="margin-top: 5px;" class="btn btn-danger">Delete Event</a>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
                <!--/contacts list-->
            </div>
        </div>
    </div>
</div>